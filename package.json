      "jshint-stylish" : "2.1.0",
      "typescript" : "1.7.5",
      "tslint" : "3.3.0",
      "gulp-jsdoc" : "0.1.5",
      "gulp-typescript" : "2.10.0",
      "gulp-typedoc" : "1.2.1",
      "gulp-tslint" : "4.3.1",
      "mockery" : "1.4.0",
      "gulp-jasmine" : "2.2.1",
      "gulp-istanbul" : "0.10.3",
      "saywhen" : "1.1.0"
    },

    "scripts" : {
        "build" : "npm run localclean && npm install && gulp",

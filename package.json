{
    "name" : "petitions",
    "version" : "0.0.1",
    "repository" : {
        "type" : "git",
        "url" : "https://github.com/mattunderscorechampion/uk-petitions"
    },
    "license" : "MIT",

    "main" : "src/uk-petitions.js",
    "dependencies" : {
      "deep-equal" : "1.0.1"
    },
    "devDependencies" : {
